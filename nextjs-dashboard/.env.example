# Ejemplo de variables de entorno necesarias
# Copiar a .env.local en desarrollo
# En producción, configurar en el panel de Vercel/servidor

# Supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key_here"
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_JWT_SECRET="your_jwt_secret_here"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key_here"
SUPABASE_URL="https://your-project.supabase.co"

# PostgreSQL
POSTGRES_DATABASE="postgres"
POSTGRES_HOST="db.your-project.supabase.co"
POSTGRES_PASSWORD="your_postgres_password_here"
POSTGRES_PRISMA_URL="postgres://user:password@host:6543/postgres?sslmode=require&pgbouncer=true"
POSTGRES_URL="postgres://user:password@host:6543/postgres?sslmode=require"
POSTGRES_URL_NON_POOLING="postgres://user:password@host:5432/postgres?sslmode=require"
POSTGRES_USER="postgres"

# NextAuth Configuration
# Generate with: openssl rand -base64 32
AUTH_SECRET="your_auth_secret_here"
NODE_ENV="development"

# Development: localhost
AUTH_URL_DEVELOPMENT="http://localhost:3000/api/auth"

# Production: must be https with your domain
AUTH_URL_PRODUCTION="https://your-domain.com/api/auth"

# Resend Email API
RESEND_API_KEY="re_your_api_key_here"
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_JWT_SECRET=your_jwt_secret

# PostgreSQL (Supabase)
POSTGRES_URL=postgresql://user:password@host:6543/postgres?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://user:password@host:5432/postgres?sslmode=require
POSTGRES_PRISMA_URL=postgresql://user:password@host:6543/postgres?sslmode=require&pgbouncer=true
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=db.project.supabase.co
POSTGRES_DATABASE=postgres

# NextAuth
AUTH_SECRET=your_secret_key_from_openssl_rand
AUTH_URL=https://yourdomain.com/api/auth  # Cambiar a HTTPS en producción

# Email (Resend)
RESEND_API_KEY=your_resend_api_key

# Node Environment
NODE_ENV=production  # development en local
